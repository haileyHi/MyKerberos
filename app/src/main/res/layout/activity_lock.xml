<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.setting.PasswordSetting">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keypad_layout">

        <ImageView
            android:id="@+id/iv_unlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:src="@drawable/lock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="비밀번호를 입력해주세요"
            app:layout_constraintTop_toBottomOf="@id/iv_unlock" />

        <TextView
            android:id="@+id/pwedit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="numberPassword"
            android:text=""
            android:textColor="#F0462a"
            android:textSize="100dp"
            app:layout_constraintTop_toBottomOf="@id/pw" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <GridLayout
        android:id="@+id/keypad_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_layout"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="1"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="2"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="3"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="4"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="5"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="6"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="7"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="8"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="9"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_null"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:clickable="false"
            android:text=""
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn_zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:text="0"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/btn_backspace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:background="#ffffff"
            android:scaleType="center"
            android:src="@drawable/ic_backspace"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>