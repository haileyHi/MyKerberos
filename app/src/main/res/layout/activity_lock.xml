<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".PasswordSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_height="300dp">

        <ImageView
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:src="@drawable/lock"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pw"
            android:text="비밀번호를 입력해주세요"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/pwedit"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="#F0462a"
            android:inputType="numberPassword"
            android:textSize="100dp"
            android:layout_height="100dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:text="1"
            android:textSize="40dp"
            android:background="#ffffff"
            android:layout_width="0dp"
            android:onClick="one2"
            android:layout_height="80dp" />
        <Button
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="2"
            android:textSize="40dp"
            android:onClick="two2"
            android:layout_width="0dp"
            android:layout_height="80dp" />
        <Button
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="three2"
            android:text="3"
            android:textSize="40dp"
            android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="#ffffff"
            android:layout_weight="1"
            android:text="4"
            android:onClick="four2"
            android:textSize="40dp"
            android:layout_width="0dp"
            android:layout_height="80dp" />
        <Button
            android:background="#ffffff"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40dp"
            android:onClick="five2"
            android:layout_width="0dp"
            android:layout_height="80dp" />
        <Button
            android:background="#ffffff"
            android:layout_weight="1"
            android:onClick="six2"
            android:layout_width="0dp"
            android:text="6"
            android:textSize="40dp"
            android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="7"
            android:onClick="seven2"
            android:textSize="40dp"
            android:layout_height="80dp" />
        <Button
            android:background="#ffffff"
            android:layout_weight="1"
            android:onClick="eight2"
            android:layout_width="0dp"
            android:text="8"
            android:textSize="40dp"
            android:layout_height="80dp" />
        <Button
            android:background="#ffffff"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40dp"
            android:onClick="nine2"
            android:layout_width="0dp"
            android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text=""
            android:clickable="false"
            android:textSize="40dp"
            android:layout_height="80dp" />
        <Button
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="0"
            android:onClick="zero2"
            android:textSize="40dp"
            android:layout_height="80dp" />
        <ImageButton
            android:background="#ffffff"
            android:scaleType="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="backspace2"
            android:src="@drawable/ic_backspace"
            android:textSize="30dp"
            android:layout_height="80dp" />
    </LinearLayout>
</LinearLayout>